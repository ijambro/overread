<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head"); %>
    <!-- <link href="/css/create-overwrite.css" rel="stylesheet" type="text/css"> -->
</head>
<body class="container">

<%- include("../partials/header", { selectedTab: "overwrites" }); %>

<!-- Uses EJS var sourceData to render the provided source dynamically -->

<main>

    <div class="row">
        <form class="col s12" action="/overwrites" method="POST">
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">account_circle</i>
                    <input placeholder="Your user name" id="username" type="text" class="">
                    <label for="username">Your User Name</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">book</i>
                    <input id="title" value="<%- sourceData.title %>" type="text" class="">
                    <label for="title">Your New Title</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input placeholder="Labels: Parody, Satire, Kid-Friendly, etc" id="labels" type="text" class="">
                    <label for="labels">Tag your Overwrite</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">
                    <textarea id="overwrite-text" class="materialize-textarea"><%- sourceData.text_plain %></textarea>
                    <label for="overwrite-text">Your Overwrite to the text</label>
                </div>
            </div>
            
            <div class="row">
                <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                    <i class="material-icons right">send</i>
                </button>
            </div>

        </form>
      </div>
 
</main>

<%- include("../partials/footer"); %>

</body>
</html>