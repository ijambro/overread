<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head"); %>
    <!-- <link href="/css/create-source.css" rel="stylesheet" type="text/css"> -->
</head>
<body class="container">

<%- include("../partials/header", { selectedTab: "books" }); %>

<main>

    <div class="row">
        <form class="col s12" action="/sources" method="POST">
            <div class="row">
                <div class="input-field col s12">
                    <input placeholder="Working Title" id="title" type="text" class="">
                    <label for="title">Title</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input placeholder="Dr. Seuss" id="author" type="text" class="">
                    <label for="author">Author</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input placeholder="0123456789" id="isbn" type="number" class="validate">
                    <label for="isbn">ISBN</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input placeholder="Cover image URL" id="imageUrl" type="url" class="validate">
                    <label for="imageUrl">Cover image URL</label>
                </div>
            </div>
            
            <div class="row">
                <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                    <i class="material-icons right">send</i>
                </button>
            </div>

        </form>
      </div>
 
</main>

<%- include("../partials/footer"); %>

</body>
</html>